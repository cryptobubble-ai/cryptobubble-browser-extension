{
  "manifest_version": 3,
  "name": "CryptoBubble AI",
  "version": "1.0.0",
  "description": "CryptoBubble AI queries multiple AI models to determine if the crypto market is about to crash.",
  "action": {
    "default_title": "CryptoBubble AI",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "host_permissions": ["https://api.cryptobubble.ai/*"]
}


