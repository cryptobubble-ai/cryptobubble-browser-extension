{
  "name": "cryptobubble-extension",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "preview": "vite preview --port 5173",
    "build": "npm run build:all",
    "build:all": "npm run build:chrome && npm run build:firefox",
    "build:chrome": "npm run build:chrome:dev && npm run build:chrome:prod",
    "build:chrome:dev": "BROWSER=chrome ENV=dev vite build",
    "build:chrome:prod": "BROWSER=chrome ENV=prod vite build",
    "build:firefox": "npm run build:firefox:dev && npm run build:firefox:prod",
    "build:firefox:dev": "BROWSER=firefox ENV=dev vite build",
    "build:firefox:prod": "BROWSER=firefox ENV=prod vite build"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "svelte": "^5.0.0",
    "vite": "^5.4.8"
  }
}


